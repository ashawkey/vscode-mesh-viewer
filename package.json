{
  "name": "mesh-viewer",
  "publisher": "kiui",
  "displayName": "mesh-viewer",
  "description": "VS Code 3D Mesh Viewer",
  "version": "0.0.2",
  "icon": "logo.webp",
  "homepage": "https://github.com/ashawkey/mesh-viewer",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashawkey/mesh-viewer"
  },
  "engines": {
    "vscode": "^1.73.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "obj",
    "ply",
    "glb",
    "gltf",
    "mesh"
  ],
  "activationEvents": [
    "onCustomEditor:meshviewer.viewer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "meshviewer.viewer",
        "displayName": "3D Viewer Light",
        "selector": [
          {
            "filenamePattern": "*.obj"
          },
          {
            "filenamePattern": "*.ply"
          },
          {
            "filenamePattern": "*.glb"
          },
          {
            "filenamePattern": "*.gltf"
          }
        ]
      }
    ],
    "configuration": {
      "title": "VSCode 3D Mesh Viewer",
      "properties": {
        "meshviewer.hideControlsOnStart": {
          "type": "boolean",
          "default": false,
          "description": "Fold the control panel if true is specified."
        },
        "meshviewer.fovy": {
          "type": "number",
          "default": 45,
          "description": "Field of view in degrees."
        },
        "meshviewer.showMesh": {
          "type": "boolean",
          "default": true,
          "description": "Show mesh."
        },
        "meshviewer.showWireframe": {
          "type": "boolean",
          "default": false,
          "description": "Show wireframe."
        },
        "meshviewer.showGrid": {
          "type": "boolean",
          "default": false,
          "description": "Show grid helper."
        },
        "meshviewer.showAxis": {
          "type": "boolean",
          "default": false,
          "description": "Show axis helper."
        },
        "meshviewer.backgroundColor": {
          "type": "string",
          "default": "#ffffff",
          "description": "Default background color."
        },
        "meshviewer.wireframeColor": {
          "type": "string",
          "default": "#000000",
          "description": "Grid color."
        },
        "meshviewer.wireframeWidth": {
          "type": "number",
          "default": 2,
          "description": "Wireframe width."
        },
        "meshviewer.lightIntensity": {
          "type": "number",
          "default": 1,
          "description": "Light intensity."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dat-gui": "^0.6.3",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/three": "^0.146.0",
    "@types/vscode": "^1.73.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.3",
    "vsce": "^2.14.0",
    "vscode-test": "^1.5.2"
  }
}
